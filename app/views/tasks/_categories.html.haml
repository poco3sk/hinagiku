- action = params[:action] == "done" ? :done : nil
%ul#categories
  - if @category
    %li= link_to "全部", [ action, :tasks ]
  - else
    %li.selected 全部
  - current_user.categories.each do |c|
    - if @category != c
      %li= link_to c.name, [ action, c, :tasks ]
    - else
      %li.selected= c.name
